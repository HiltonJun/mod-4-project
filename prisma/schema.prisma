generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id          String @id @default(uuid())
  nome        String @unique
  capa        String
  descricao   String
  plataformas String
  lancamento  String
  developer   String
  publisher   String
  imdbscore   Int
  trailer     String
  gameplay    String

  generos Genero[]
  perfis  Perfil[]
  Favorite Favorite[]

  @@map("game")

}

model Genero {
  id   String @id @default(uuid())
  nome String @unique

  games Game[]

  @@map("genero")
}

model User {
  id       String  @id @default(uuid())
  cpf      String  @unique
  name     String  @unique
  email    String  @unique
  password String
  isAdmin  Boolean @default(false) @map("is_admin")

  perfil Perfil[]

  @@map("user")
}

model Perfil {
  id       String @id @default(uuid())
  title    String
  imageURL String

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  games     Game[]
  favorites Favorite[]

  @@map("perfil")
}

model Favorite {
  id        String @id @default(uuid())
  nome      String @unique
  capa      String
  imdbscore Int

  game   Game   @relation(fields: [gameId], references: [id])
  gameId String @map("user_id")

  perfis Perfil[]

  @@map("favorite")
}
