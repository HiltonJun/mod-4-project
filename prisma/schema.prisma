generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id          String  @id @default(uuid())
  nome        String
  capa        String
  descricao   String
  preco       Int
  plataformas String
  lancamento  String
  developer   String
  publisher   String
  genre       String
  imdbscore   Int
  favorite    Boolean

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("game")
}

model Genero {
  id   String @id @default(uuid())
  nome String @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("genero")
}

model User {
  id       String @id @default(uuid())
  nickname String @unique
  name     String
  password String
  image    String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}
