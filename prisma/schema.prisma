generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id          String  @id @default(uuid())
  nome        String
  capa        String
  descricao   String
  preco       Int
  plataformas String
  lancamento  String
  developer   String
  publisher   String
  genre       String
  imdbscore   Int
  favorite    Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Genero {
  id   String @id @default(uuid())
  nome String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
