generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id          String  @id @default(uuid())
  nome        String
  capa        String
  descricao   String
  plataformas String
  lancamento  String
  developer   String
  publisher   String
  imdbscore   Int
  favorite    Boolean
  trailer     String
  gameplay    String

  generos Genero[]
  perfis Perfil[]

  @@map("game")
}

model Genero {
  id   String @id @default(uuid())
  nome String @unique

  games Game[]

  @@map("genero")
}

model User {
  id       String @id @default(uuid())
  cpf String  @unique
  name     String
  email String
  password String
  image    String
  isAdmin Boolean

  perfil Perfil[]

  @@map("user")
}

model Perfil {
  id       String @id @default(uuid())
  title String
  imageURL String

  user User @relation(fields: [userId], references: [id])
  userId String @map("user_id")

   games Game[]

  @@map("perfil")
}
